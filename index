    <script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>
    <script>
        // Inicializar EmailJS (reemplaza con tu User ID real)
        (function(){
            emailjs.init("drrQQ4At0s-1TvzNY"); // ‚ö†Ô∏è REEMPLAZAR con tu User ID de EmailJS
        })();
        
        let selectedService = null;

        // Configurar fecha m√≠nima (hoy + 1 d√≠a para est√°ndar, + 2 d√≠as para certificado)
        function updateMinDate() {
            const today = new Date();
            const deliveryDateInput = document.getElementById('deliveryDate');
            
            if (selectedService === 'standard') {
                const minDate = new Date(today.getTime() + 24 * 60 * 60 * 1000);
                deliveryDateInput.min = minDate.toISOString().split('T')[0];
            } else if (selectedService === 'certified') {
                const minDate = new Date(today.getTime() + 48 * 60 * 60 * 1000);
                deliveryDateInput.min = minDate.toISOString().split('T')[0];
            }
        }

        function selectService(serviceType) {
            // Remover selecci√≥n anterior
            document.querySelectorAll('.service-option').forEach(option => {
                option.classList.remove('selected');
            });
            
            // Seleccionar nuevo servicio
            const selectedOption = document.querySelector(`[data-service="${serviceType}"]`);
            selectedOption.classList.add('selected');
            
            selectedService = serviceType;
            document.getElementById('serviceType').value = serviceType;
            
            if (serviceType === 'standard') {
                document.getElementById('servicePrice').value = '80';
            } else {
                document.getElementById('servicePrice').value = '85';
            }
            
            updateMinDate();
            updateSummary();
        }

        function updateSummary() {
            const summary = document.getElementById('summary');
            const summaryContent = document.getElementById('summaryContent');
            
            const formData = new FormData(document.getElementById('deliveryForm'));
            
            if (selectedService && formData.get('guideNumber') && formData.get('destination')) {
                const serviceName = selectedService === 'standard' ? 'Entrega con Turno Est√°ndar' : 'Entrega Certificada Thermo King';
                const price = selectedService === 'standard' ? '$80.00 + IVA ' : '$85.00 + IVA';
                
                summaryContent.innerHTML = `
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                        <div>
                            <strong>üìß Correo del solicitante:</strong> ${formData.get('email') || 'No especificado'}<br>
                            <strong>üì¶ Gu√≠a:</strong> ${formData.get('guideNumber')}<br>
                            <strong>üìç Destino:</strong> ${formData.get('destination')}<br>
                            <strong>üèôÔ∏è Ciudad:</strong> ${formData.get('city') || 'No especificada'}
                        </div>
                        <div>
                            <strong>üì¶ Cajas:</strong> ${formData.get('numberOfBoxes') || '0'}<br>
                            <strong>üìÖ Fecha:</strong> ${formData.get('deliveryDate') || 'No especificada'}<br>
                            <strong>‚è∞ Hora:</strong> ${formData.get('deliveryTime') || 'No especificada'}<br>
                            <strong>üöõ Servicio:</strong> ${serviceName}<br>
                            <strong>üí∞ Precio:</strong> ${price}
                        </div>
                    </div>
                `;
                
                summary.style.display = 'block';
            }
        }

        // Actualizar resumen en tiempo real
        document.getElementById('deliveryForm').addEventListener('input', updateSummary);
        document.getElementById('deliveryForm').addEventListener('change', updateSummary);

        // Funci√≥n para generar el email
        function generateEmailContent(formData) {
            const serviceName = selectedService === 'standard' ? 'Entrega con Turno Est√°ndar' : 'Entrega Certificada Thermo King';
            const price = selectedService === 'standard' ? '$80.00 + IVA' : '$85.00 + IVA';
            
            const emailBody = `
NUEVA SOLICITUD DE TURNO DE ENTREGA
=====================================

üìß INFORMACI√ìN DEL CLIENTE:
- Email: ${formData.get('email')}
- Nombre: ${formData.get('clientName')}
- Tel√©fono: ${formData.get('phone')}

üì¶ INFORMACI√ìN DEL ENV√çO:
- N√∫mero de Gu√≠a: ${formData.get('guideNumber')}
- Destino: ${formData.get('destination')}
- Ciudad: ${formData.get('city')}
- N√∫mero de Cajas: ${formData.get('numberOfBoxes')}
- Fecha de Entrega: ${formData.get('deliveryDate')}
- Hora de Entrega: ${formData.get('deliveryTime')}

üöõ SERVICIO SOLICITADO:
- Tipo: ${serviceName}
- Precio: ${price}

üë§ CONTACTO EN DESTINO:
- Persona: ${formData.get('contactPerson') || 'No especificado'}
- Tel√©fono: ${formData.get('contactPhone') || 'No especificado'}

üìù INSTRUCCIONES ESPECIALES:
${formData.get('specialInstructions') || 'Ninguna'}

üìã DOCUMENTOS PENDIENTES:
‚ö†Ô∏è El cliente debe responder al correo de confirmaci√≥n adjuntando:
- Orden de Compra
- Factura  
- Documento de Turno

‚è∞ Fecha de Solicitud: ${new Date().toLocaleString('es-ES')}
            `.trim();
            
            return emailBody;
        }

        // Funci√≥n para enviar email usando EmailJS
        function sendEmail(formData) {
            const serviceName = selectedService === 'standard' ? 'Entrega con Turno Est√°ndar' : 'Entrega Certificada Thermo King';
            const servicePrice = selectedService === 'standard' ? '80' : '85';
            
            // Preparar datos para las plantillas
            const templateParams = {
                // Cliente
                client_email: formData.get('email'),
                client_name: formData.get('clientName'),
                client_phone: formData.get('phone'),
                
                // Env√≠o
                guideNumber: formData.get('guideNumber'),
                destination: formData.get('destination'),
                city: formData.get('city'),
                numberOfBoxes: formData.get('numberOfBoxes'),
                deliveryDate: formData.get('deliveryDate'),
                deliveryTime: formData.get('deliveryTime'),
                
                // Servicio
                serviceType: serviceName,
                servicePrice: servicePrice,
                
                // Contacto
                destinationCompany: formData.get('destinationCompany') || 'No especificado',
                contactPerson: formData.get('contactPerson') || 'No especificado',
                contactPhone: formData.get('contactPhone') || 'No especificado',
                specialInstructions: formData.get('specialInstructions') || 'Ninguna',
                
                // Sistema
                request_date: new Date().toLocaleString('es-ES', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                })
            };
            
            // Enviar email al administrador
            emailjs.send('service_09dcb42', 'template_bzi1dor', templateParams)
                .then(function(response) {
                    console.log('Confirmaci√≥n enviada al cliente!', response.status, response.text);
                    
                    // Mostrar mensaje de √©xito actualizado
                    alert('‚úÖ ¬°Turno agendado exitosamente!\n\n' +
                          'üìß Hemos enviado la informaci√≥n a nuestro equipo\n' +
                          'üì® Recibir√° un correo de confirmaci√≥n\n' +
                          'üìé IMPORTANTE: Debe responder al correo de confirmaci√≥n adjuntando:\n' +
                          '   ‚Ä¢ Orden de Compra\n' +
                          '   ‚Ä¢ Factura\n' +
                          '   ‚Ä¢ Documento de Turno\n' +
                          'üìû Nos contactaremos con usted dentro de las pr√≥ximas 2 horas');
                    
                    // Limpiar formulario
                    document.getElementById('deliveryForm').reset();
                    selectedService = null;
                    document.querySelectorAll('.service-option').forEach(option => {
                        option.classList.remove('selected');
                    });
                    updateSummary();
                })
                .catch(function(error) {
                    console.log('Error al enviar emails:', error);
                    // Fallback: abrir cliente de email
                    openEmailClient(formData);
                });
        }

        // Funci√≥n fallback: abrir cliente de email local
        function openEmailClient(formData) {
            const emailContent = generateEmailContent(formData);
            const subject = `Nueva Solicitud de Turno - Gu√≠a: ${formData.get('guideNumber')}`;
            const body = encodeURIComponent(emailContent);
            
            const mailtoLink = `mailto:sacnacional@grupolaar.com?subject=${encodeURIComponent(subject)}&body=${body}`;
            
            // Intentar abrir el cliente de email
            window.location.href = mailtoLink;
            
            alert('üìß Se ha abierto su cliente de email con la informaci√≥n del turno.\n\n' +
                  'üìé RECUERDE: Una vez que env√≠e el correo, recibir√° una confirmaci√≥n.\n' +
                  'Debe responder a esa confirmaci√≥n adjuntando:\n' +
                  '‚Ä¢ Orden de Compra\n' +
                  '‚Ä¢ Factura\n' +
                  '‚Ä¢ Documento de Turno');
        }

        // Validaci√≥n del formulario
        document.getElementById('deliveryForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (!selectedService) {
                alert('‚ö†Ô∏è Por favor seleccione un tipo de servicio.');
                return;
            }
            
            // Validar hora de anticipaci√≥n
            const deliveryDate = new Date(document.getElementById('deliveryDate').value);
            const now = new Date();
            const hoursDiff = (deliveryDate - now) / (1000 * 60 * 60);
            
            if (selectedService === 'standard' && hoursDiff < 24) {
                alert('‚ö†Ô∏è Para el servicio est√°ndar debe agendar con m√≠nimo 24 horas de anticipaci√≥n.');
                return;
            }
            
            if (selectedService === 'certified' && hoursDiff < 48) {
                alert('‚ö†Ô∏è Para el servicio certificado debe agendar con m√≠nimo 48 horas de anticipaci√≥n.');
                return;
            }
            
            // Confirmar env√≠o con instrucciones actualizadas
            if (confirm('¬øEst√° seguro de que desea enviar la solicitud de turno?\n\n' +
                       'RECUERDE: Despu√©s de enviar recibir√° un correo de confirmaci√≥n.\n' +
                       'Debe responder a ese correo adjuntando todos los documentos requeridos.')) {
                const formData = new FormData(this);
                
                // Cambiar texto del bot√≥n
                const submitBtn = document.querySelector('.submit-btn');
                const originalText = submitBtn.textContent;
                submitBtn.textContent = 'üì§ Enviando...';
                submitBtn.disabled = true;
                
                // Intentar enviar por EmailJS, si falla usar fallback
                if (typeof emailjs !== 'undefined') {
                    sendEmail(formData);
                } else {
                    openEmailClient(formData);
                }
                
                // Restaurar bot√≥n despu√©s de 3 segundos
                setTimeout(() => {
                    submitBtn.textContent = originalText;
                    submitBtn.disabled = false;
                }, 3000);
            }
        });

 // Configurar fecha m√≠nima inicial
        const today = new Date();
        const tomorrow = new Date(today.getTime() + 24 * 60 * 60 * 1000);
        document.getElementById('deliveryDate').min = tomorrow.toISOString().split('T')[0];
    </script>
</body>
</html>
